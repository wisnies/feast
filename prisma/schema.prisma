generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  slug        String   @unique
  thumbnail   String
  date        DateTime
  description String
  header      String
  body        String
  pricing     String
  timeline    String
}

model Reservation {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name       String
  email      String
  phone      String
  guestCount String
  date       DateTime
}
